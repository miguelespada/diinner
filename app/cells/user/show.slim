div.row
  div.col-sm-4
    p.user-avatar.section-photo
      = image_tag model.image_url, size: "200"
  div.col-sm-8
    h1.user-name
      = model.name
    div.section-info
      div.user-email.info-item
        div.bold-label EMAIL
        = model.email
      div.user-gender.info-item
        div.bold-label GENDER
        = model.gender
      div.user-birth.info-item
        div.bold-label BIRTHDAY
        = model.birth
      - if model.is_owned_by?(current_user)
        div.user-default-card.info-item
          div.bold-label DEFAULT CARD
          = default_card
      - if model.has_preferences?
        div.user-preferences.info-item
          div.bold-label PREF. AGE
          = age_preference
        div.user-preferences.info-item
          div.bold-label PREF. MENU PRICE
          = menu_preference
        div.user-preferences.info-item
          div.bold-label PREF. CITY
          = city_preference