= simple_form_for [:admin, @test] do |f|
  = f.error_notification
  = f.input :question
  = f.input :option_A, as: :attachinary
  = f.input :caption_A
  = f.input :option_B, as: :attachinary
  = f.input :caption_B
  = f.input :gender, collection: [['Undefined', 'undefined'], ['Female', 'female'], ['Male', 'male']], default: "undefined"
  = f.input :extraversion, collection: -2..2, default: 0
  = f.input :educacion, collection: -2..2, default: 0
  = f.input :hipsterismo, collection: -2..2, default: 0
  = f.input :freakismo, collection: -2..2, default: 0
  = f.button :submit

javascript:
  $(document).ready(function () {
    $('.attachinary-input').attachinary();
  });