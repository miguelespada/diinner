.row.box
  .diinner-label.yellow
    - if @reservations.length > 0
      = t("my_reservations")
    - else
      .diinner-info
        = t("no_reservations")
  .calendar
    - if @reservations.length > 0
      = month_calendar events: @reservations, table: {class: "table table-bordered"}, defaults: { placeholder: false, hint: false, label: false } do |date, reservations|
        = date.day
        - reservations.each do |reservation|
          = link_to user_reservation_path(@user, reservation)
            .status-table class="#{reservation.status}"
              = reservation.hour.strftime("%H:%M")
