div.container-fluid
  div.row
    div.col-md-12
      div.col-md-8
        h1
          | Evaluation for diinner plan at restaurant:
          == @reservation.restaurant.name
        = simple_form_for [@user, @reservation, @evaluation], \
            :url => user_reservation_evaluations_path, :method => :post do |f|
          = f.error_notification
          = f.input :quality_of_restaurant, collection: 1..5
          = f.input :quality_of_menu, collection: 1..5
          = f.input :comments
          = f.input :had_fun, as: :boolean
          = f.input :would_recommend, as: :boolean
          = f.button :submit