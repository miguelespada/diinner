- restaurant = table.restaurant
= link_to @current_user.nil? ? static_table_path(table) : user_table_path(@current_user, table)
  .col-lg-4.col-md-6.col-xs-12.table-block
    .box.table-box.col-xs-12.no-padding
      .date-wrapper
        .date
          = raw(table.date.strftime("%A <div class='big-day'>%e</div> %B"))
        .hour
          = table.hour.strftime("%H:%M")
      .bottom-wrapper
        .price
          = "#{table.price}€"
        .table-info
          .title
            = (table.title || table.menu.name).upcase
          .left
            .restaurant
              = restaurant.name
            .city
              = restaurant.city.name
            .type
              = "#{t(table.table_type)}: #{table.min_age} - #{table.max_age} años"
          .right
            .table-icon-wrapper
              .chairs-wrapper
                .chair-icon
                .chair-icon
                .chair-icon
              .table-icon = "#{table.user_count} de 6"
              .chairs-wrapper
                .chair-icon
                .chair-icon
                .chair-icon
      .image
        - if table.image
          = cl_image_tag table.image.public_id, format: :jpg, quality: 60
        - else
          = cl_image_tag restaurant.photo.public_id, format: :jpg, quality: 60 if !restaurant.photo.nil?